{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Minishell",
            "type": "cppbuild",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-g",
                "src/main.c",
                "-o",
                "msh",
                "lib/parser.o",
                "lib/scanner.o"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build"
            }
        }
    ]
}